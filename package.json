{
  "name": "Facet",
  "version": "4.0.3",
  "main": "main.js",
  "author": "Kevin Tedore",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-dmg": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "electron": "^16.0.6",
    "eslint": "^8.6.0"
  },
  "description": "Port of Facet Application by Lars Gisl√©n",
  "license": "Apache License, Version 2.0",
  "module": "es6",
  "build": {
    "appId": "com.tedore.facet",
    "mac": {
      "category": "public.app-category.utilities",
      "type": "development"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    }
  },
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "dependencies": {
    "@electron/remote": "^2.0.1",
    "electron-squirrel-startup": "^1.0.0",
    "paper": "^0.12.15"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "build/icon.png",
        "platform": [
          "darwin"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Facet"
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "additionalDMGOptions": {
              "background-color": "#000000",
              "window": {
                "size": {
                  "height": 420,
                  "width": 516
                }
              }
            },
            "format": "ULFO",
            "icon": "build/icon.png",
            "iconSize": 128,
            "name": "Facet",
            "overwrite": true,
            "background": "build/background.png",
            "contents": [
              { "x": 400, "y": 240, "type": "link", "path": "/Applications" },
              { "x": 120, "y": 240, "type": "file", "path": "/Users/ktedore/Development/GitHub/Facet/out/Facet-darwin-x64/Facet.app" }
            ]
          }
        }
      ]
    }
  }
}
